<div class='title-wrapper'><h1>Create New Profile</h1></div>

<div class="user-select group">
  <div class="select-typical box1">
    <div class="or">OR</div>
  </div>
  <div class="select-owner box1">
    <div class="or">OR</div>
  </div>
  <div class="select-artist box1"></div>
</div>

<form class="form-wrap typical-form" action="/users" method="post" enctype="multipart/form-data">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <div class="input">
    <input type="hidden" name="user_type_id" value="11">
  </div>

  <div class="input">
    <label>UserName</label>
    <input type="text" name="name" placeholder="User Name" class="signup-input">
  </div>

  <div class="input">
    <label>Avatar</label>
    <input type="file" name="image" class="avatar-input">
  </div>

  <div class="input">
    <label>Gender</label></br></br>
    <input type="radio" name="gender" value="male"> Male
    <input type="radio" name="gender" value="female"> Female
  </div>

  <div class="input">
    <label>Email Address</label> <%= @error %>
    <input type="text" name="email" placeholder="Email Address" class="signup-input">
  </div>

  <div class="input">
    <label>Password</label>
    <input type="password" name="password" placeholder="Password" class="signup-input" id="register-password">
  </div>

  <div class="input">
    <label>Confirm Password</label>
    <input type="password" name="password_confirmation" placeholder="Confirm Password" class="signup-input" id="register-pass-confirm">
  </div>

  <button>Create User</button>
</form>

