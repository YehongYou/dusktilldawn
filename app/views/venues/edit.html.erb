<h1 class="edit-title">Edit Venue</h1>

<div class="venue-page-edit">

  <form action="/venues/<%= @venue.id %>" class="venue-edit" method="post" enctype="multipart/form-data">
    <input type="hidden" value="put" name="_method">
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

    <% if @venue.venue_type == "bar" %>

      <div class="input">
        <label>Venue Type</label></br></br>
        <input type="radio" name="venue_type" value="bar" checked> Bar
        <input type="radio" name="venue_type" value="club"> Club
      </div>

    <% elsif @venue.venue_type == "club" %>

      <div class="input">
        <label>Venue Type</label></br></br>
        <input type="radio" name="venue_type" value="bar"> Bar
        <input type="radio" name="venue_type" value="club" checked> Club
      </div>

    <% end %>

    <div class="input">
      <label>Venue Name</label>
      <input type="text" name="name" placeholder="User Name" class="signup-input" value="<%= @venue.name %>">
    </div>

    <div class="input">
      <label>Address</label>
      <input type="text" name="address" placeholder="Address" class="signup-input" value="<%= @venue.address %>">
    </div>

    <div class="input">
      <label>Image</label>
      <input type="file" name="image" class="avatar-input">
    </div>

    <div class="input">
      <label>Suburb</label>
      <input type="text" name="suburd" placeholder="Suburb" class="signup-input" value="<%= @venue.suburd %>">
    </div>

    <div class="input">
      <label>Post Code</label>
      <input type="text" name="postcode" placeholder="Post Code" class="signup-input" value="<%= @venue.postcode %>">
    </div>

    <div class="input">
      <label>Description</label></br>
      <textarea name="description" placeholder="Tell us more about your club!" value="<%= @venue.description %>"></textarea>
    </div>

    <button>Update Venue!</button>
  </form>

</div>
